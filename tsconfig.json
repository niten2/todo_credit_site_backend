{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "src/*",
        "spec*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
